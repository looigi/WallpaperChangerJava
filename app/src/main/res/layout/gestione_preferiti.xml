<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:weightSum="20"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:textSize="18sp"
            android:gravity="center_horizontal"
            android:textColor="#000099"
            android:text="Gestione Preferiti"
            android:padding="3dp"
            android:background="@drawable/bordo_arrotondato_bianco_non_sfumato_trasp"
            android:layout_height="wrap_content">

        </TextView>

        <ListView
            android:id="@+id/lstListaPreferiti"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:dividerHeight="1dp"
            android:listSelector="#0000CC" />

        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="right"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imgChiudeListaPreferiti"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/elimina_quadrato" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/contenitore"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="2dp"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:paddingTop="2dp"
        android:background="#000000"
        tools:context=".MainActivity" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <com.looigi.newlooplayer.ImmagineZoomabile
                android:id="@+id/imgImmagineSfondo"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imgLinguettaSinistra"
            android:layout_width="30dp"
            android:layout_centerVertical="true"
            android:layout_height="70dp"
            android:background="@drawable/linguetta1"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/imgLinguettaDestra"
            android:layout_width="30dp"
            android:layout_alignTop="@+id/imgLinguettaSinistra"
            android:layout_marginTop="-60dp"
            android:layout_height="70dp"
            android:background="@drawable/linguetta1"
            tools:ignore="ContentDescription" />

        <DigitalClock
            android:id="@+id/fldOrologio"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textColor="#0000CC"
            android:background="@drawable/bordo_arrotondato_bianco_sfumato_trasp"
            android:textSize="20sp"
            android:layout_height="wrap_content">

        </DigitalClock>

        <ImageView
            android:id="@+id/imgCuffie"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="30dp"
            android:background="@drawable/cuffie"
            android:layout_width="40dp"
            android:layout_height="40dp"
            tools:ignore="ContentDescription" />

        <!-- Bottoniera -->
        <LinearLayout
            android:id="@+id/layBottoniera"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:padding="3dp"
            android:layout_height="wrap_content"
            android:gravity="bottom">
            <include layout="@layout/bottoniera" />
        </LinearLayout>

        <TextView
            android:id="@+id/txtInformazioni"
            android:layout_gravity="left"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:textColor="#0000CC"
            android:background="@drawable/bordo_arrotondato_trasp2"
            android:layout_width="wrap_content"
            android:padding="5dp"
            android:text=""
            android:layout_height="wrap_content">
        </TextView>

        <!-- Menu e stelle -->
        <LinearLayout
            android:id="@+id/layIntestazione"
            android:orientation="horizontal"
            android:weightSum="8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/imgRicerche"
                    android:layout_width="50dp"
                    android:layout_height="20dp"
                    android:gravity="left|center"
                    android:background="@drawable/hamburge" />
            </LinearLayout>

            <!--  Stelle -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="6"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:orientation="horizontal"
                android:layout_height="30dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical|center_horizontal"
                    android:layout_height="30dp">

                    <ImageView
                        android:id="@+id/imgBellezza0"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/preferito_vuoto" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical|center_horizontal"
                    android:layout_height="30dp">

                <ImageView
                    android:id="@+id/imgBellezza1"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/preferito_vuoto" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical|center_horizontal"
                    android:layout_height="30dp">

                    <ImageView
                        android:id="@+id/imgBellezza2"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/preferito_vuoto" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical|center_horizontal"
                    android:layout_height="30dp">

                    <ImageView
                        android:id="@+id/imgBellezza3"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:background="@drawable/preferito_vuoto" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical|center_horizontal"
                    android:layout_height="30dp">

                    <ImageView
                        android:id="@+id/imgBellezza4"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:background="@drawable/preferito_vuoto" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical|center_horizontal"
                    android:layout_height="30dp">

                    <ImageView
                        android:id="@+id/imgBellezza5"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:background="@drawable/preferito_vuoto" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical|center_horizontal"
                    android:layout_height="30dp">

                    <ImageView
                        android:id="@+id/imgBellezza6"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:background="@drawable/preferito_vuoto" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical|center_horizontal"
                    android:layout_height="30dp">

                    <ImageView
                        android:id="@+id/imgBellezza7"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:background="@drawable/preferito_vuoto" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical|center_horizontal"
                    android:layout_height="30dp">

                    <ImageView
                        android:id="@+id/imgBellezza8"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:background="@drawable/preferito_vuoto" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical|center_horizontal"
                    android:layout_height="30dp">

                    <ImageView
                        android:id="@+id/imgBellezza9"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:background="@drawable/preferito_vuoto" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/imgMenu"
                    android:layout_width="50dp"
                    android:layout_height="20dp"
                    android:gravity="right|center"
                    android:background="@drawable/hamburge" />
            </LinearLayout>

        </LinearLayout>

        <!-- Ricerche -->
        <include layout="@layout/ricerche" />

        <!-- Settaggi -->
        <include layout="@layout/settaggi" />

        <!-- Lista Tags -->
        <include layout="@layout/tags" />

        <!-- Lista Artisti -->
        <include layout="@layout/artisti" />

        <!-- Albero -->
        <LinearLayout
            android:id="@+id/layAlberoAperto"
            android:background="@drawable/bordo_arrotondato_bianco_non_sfumato_trasp"
            android:layout_width="200dp"
            android:orientation="vertical"
            android:layout_marginTop="30dp"
            android:layout_height="match_parent"
            android:layout_above="@+id/layBottoniera"
            >

            <!-- <ScrollView
                android:id="@+id/horizontalScroll"
                android:fillViewport="true"
                android:measureAllChildren="false"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/layTree"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </LinearLayout> -->
            <!-- </ScrollView> -->
        </LinearLayout>

        <!-- Testo -->
        <LinearLayout
            android:id="@+id/layTestoAperto"
            android:background="@drawable/bordo_arrotondato_bianco_sfumato_trasp"
            android:layout_width="200dp"
            android:orientation="vertical"
            android:layout_marginTop="30dp"
            android:layout_height="match_parent"
            android:layout_above="@+id/layBottoniera"
            >

            <LinearLayout
                android:gravity="end"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imgRefreshTesto"
                    android:gravity="end"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/icona_cerca" />
            </LinearLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/txtTesto"
                        android:textColor="#0000CC"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </ScrollView>
        </LinearLayout>

        <ImageView
            android:id="@+id/imgNoInternet"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/nonet" />

        <!-- Lista Tags Brano -->
        <LinearLayout
            android:id="@+id/layTagsbrano"
            android:visibility="gone"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/bordo_arrotondato_bianco_non_sfumato_trasp"
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <include layout="@layout/gestionetags" />
        </LinearLayout>
    </RelativeLayout>

    <include layout="@layout/amministrazione" />

    <include layout="@layout/gestione_album" />

    <LinearLayout
        android:id="@+id/laySplash"
        android:visibility="visible"
        android:orientation="horizontal"
        android:background="@drawable/splash"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
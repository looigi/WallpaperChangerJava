<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/layGestioneAlbum"
        android:background="@drawable/bordo_arrotondato_bianco_sfumato_trasp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:padding="5dp"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:weightSum="7"
            android:orientation="horizontal"
            android:background="@drawable/bordo_arrotondato_bianco_non_sfumato_trasp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="6"
                android:textSize="22sp"
                android:gravity="center_horizontal"
                android:textColor="#000099"
                android:text="Gestione Album"
                android:padding="3dp"
                android:layout_height="wrap_content">

            </TextView>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imgChiudeGestioneAlbum"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/elimina_quadrato" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/txtNomeAlbumGA"
            android:layout_width="match_parent"
            android:textSize="22sp"
            android:gravity="center_horizontal"
            android:textColor="#000099"
            android:text="Gestione Album"
            android:padding="3dp"
            android:layout_height="wrap_content">

        </TextView>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:gravity="right"
                    android:weightSum="10"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:gravity="center_horizontal"
                        android:layout_weight="7"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/imgAlbumGA"
                            android:layout_width="250dp"
                            android:layout_height="250dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:background="@drawable/bordo_arrotondato_bianco_sfumato_trasp"
                        android:orientation="vertical"
                        android:gravity="center_vertical"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/imgCambiaAlbumGA"
                            android:layout_gravity="right"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="@drawable/icona_cerca" />

                        <TextView
                            android:layout_width="match_parent"
                            android:textSize="22sp"
                            android:gravity="right"
                            android:textColor="#009900"
                            android:text="Immagini da scaricare"
                            android:padding="3dp"
                            android:layout_height="wrap_content">

                        </TextView>

                        <EditText
                            android:id="@+id/edtQuanteImmagini"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#000099"
                            android:ems="10"
                            android:inputType="number" />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layCambioImmagineGA"
                    android:orientation="vertical"
                    android:background="@drawable/bordo_arrotondato_bianco_sfumato_trasp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:weightSum="5"
                        android:padding="3dp"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_horizontal"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/imgIndietroGA"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:background="@drawable/icona_indietro" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="3"
                            android:gravity="center_horizontal"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/imgImmagineSceltaGA"
                                android:layout_width="150dp"
                                android:layout_height="150dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/imgAvantiGA"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:background="@drawable/icona_avanti" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/txtInfoImmagineGA"
                            android:layout_width="match_parent"
                            android:textSize="22sp"
                            android:gravity="center_horizontal"
                            android:textColor="#000099"
                            android:padding="3dp"
                            android:layout_height="wrap_content">

                        </TextView>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layContenitoreLista"
        android:layout_margin="2dp"
        android:background="@drawable/bordo_arrotondato_bianco_sfumato_trasp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="11"
        android:orientation="horizontal">

        <Switch
            android:id="@+id/switchArtista"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/icon"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:src="@drawable/error" />

        <LinearLayout
            android:layout_width="0dp"
            android:paddingLeft="10dp"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:layout_weight="5"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtArtista"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="20sp"
                android:padding="1dp"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/txtTags"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="13sp"
                android:textColor="@color/black" />
        </LinearLayout>

        <Switch
            android:id="@+id/switchEliminaPreferiti"
            android:layout_width="0dp"
            android:textColor="#cc0000"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="2" />

    </LinearLayout>

    <!-- <View
        android:id="@+id/layDivisore"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@android:color/darker_gray"/> -->
</LinearLayout>
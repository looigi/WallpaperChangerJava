<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:background="@drawable/bordo_arrotondato_bianco_non_sfumato_trasp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:textColor="#00CC00"
            android:text="Selezionati"
            android:layout_height="wrap_content">

        </TextView>

        <TextView
            android:layout_width="0dp"
            android:background="@drawable/bordo_arrotondato_bianco_non_sfumato_trasp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:textColor="#0000CC"
            android:text="Da Selezionare"
            android:layout_height="wrap_content">

        </TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:weightSum="2"
        android:orientation="horizontal">

        <ListView
            android:id="@+id/lstTagsBrano"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="200dp"
            android:dividerHeight="1dp"
            android:listSelector="#9999EE" />

        <ListView
            android:id="@+id/lstTagsTutti"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="200dp"
            android:dividerHeight="1dp"
            android:listSelector="#9999EE" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:gravity="right"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgChiudeTagsBrano"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/elimina_quadrato" />

        <!-- <ImageView
            android:id="@+id/imgSalvaRicerche"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/icona_salva" /> -->

    </LinearLayout>

</LinearLayout>
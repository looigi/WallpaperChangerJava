<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/layMascheraAmministrazione"
        android:background="@drawable/bordo_arrotondato_bianco_sfumato_trasp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:visibility="gone"
        android:padding="5dp"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:textSize="22sp"
            android:gravity="center_horizontal"
            android:textColor="#000099"
            android:text="Amministrazione"
            android:padding="3dp"
            android:background="@drawable/bordo_arrotondato_bianco_non_sfumato_trasp"
            android:layout_height="wrap_content">

        </TextView>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="6">

                    <TextView
                        android:layout_gravity="center_vertical"
                        android:layout_width="0dp"
                        android:layout_weight="4"
                        android:textColor="#0000CC"
                        android:text="Elimina brutte"
                        android:layout_height="wrap_content">
                    </TextView>

                    <Button
                        android:id="@+id/btnEliminaBrutte"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textColor="#0000CC"
                        android:layout_weight="2"
                        android:ems="10" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="6">

                    <TextView
                        android:layout_gravity="center_vertical"
                        android:layout_width="0dp"
                        android:layout_weight="4"
                        android:textColor="#0000CC"
                        android:text="Pulizia completa"
                        android:layout_height="wrap_content">
                    </TextView>

                    <Button
                        android:id="@+id/btnPuliziaCompleta"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textColor="#0000CC"
                        android:layout_weight="2"
                        android:ems="10" />

                </LinearLayout>

                <!-- Inserire tutto sopra questa view -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginBottom="2dp"
                    android:background="@android:color/darker_gray"/>

                <LinearLayout
                    android:gravity="right"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/imgAnnullaAmministrazione"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/elimina_quadrato" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/layRicerche"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp"
        android:background="@drawable/bordo_arrotondato_bianco_sfumato_trasp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:textSize="22sp"
            android:gravity="center_horizontal"
            android:textColor="#000099"
            android:text="Ricerche"
            android:padding="3dp"
            android:background="@drawable/bordo_arrotondato_bianco_non_sfumato_trasp"
            android:layout_height="wrap_content">

        </TextView>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Switch
                    android:id="@+id/switchRandom"
                    android:layout_width="match_parent"
                    android:textColor="#0000CC"
                    android:layout_height="wrap_content"
                    android:text="Random Brani" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginBottom="2dp"
                    android:background="@android:color/darker_gray"/>

                <Switch
                    android:id="@+id/switchPreferiti"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#0000CC"
                    android:text="Preferiti" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="7"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="5"
                        android:textColor="#0000CC"
                        android:text="Lista Preferiti"
                        android:layout_height="wrap_content">

                    </TextView>

                    <Button
                        android:id="@+id/btnLista"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:text="..."
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginBottom="2dp"
                    android:background="@android:color/darker_gray"/>

                <Switch
                    android:id="@+id/switchPresenteSuDisco"
                    android:layout_width="match_parent"
                    android:textColor="#0000CC"
                    android:layout_height="wrap_content"
                    android:text="Brano su disco" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginBottom="2dp"
                    android:background="@android:color/darker_gray"/>

                <Switch
                    android:id="@+id/switchRicercaTesto"
                    android:layout_width="match_parent"
                    android:textColor="#0000CC"
                    android:layout_height="wrap_content"
                    android:text="Testo" />

                <LinearLayout
                    android:id="@+id/layRicercaTesto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="6">

                    <TextView
                        android:layout_gravity="center_vertical"
                        android:layout_width="0dp"
                        android:layout_weight="4"
                        android:textColor="#0000CC"
                        android:text="Ricerca per testo"
                        android:layout_height="wrap_content">
                    </TextView>

                    <EditText
                        android:id="@+id/edtRicercaTesto"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textColor="#0000CC"
                        android:layout_weight="2"
                        android:ems="10"
                        android:inputType="text" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginBottom="2dp"
                    android:background="@android:color/darker_gray"/>

                <Switch
                    android:id="@+id/switchStelle"
                    android:layout_width="match_parent"
                    android:textColor="#0000CC"
                    android:layout_height="wrap_content"
                    android:text="Stelle" />

                <Switch
                    android:id="@+id/switchStelleSuperiori"
                    android:layout_width="match_parent"
                    android:textColor="#0000CC"
                    android:layout_height="wrap_content"
                    android:text="Anche superiore" />

                <LinearLayout
                    android:id="@+id/layRicercaStelle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="6">

                    <TextView
                        android:layout_gravity="center_vertical"
                        android:layout_width="0dp"
                        android:layout_weight="4"
                        android:textColor="#0000CC"
                        android:text="Numero Stelle"
                        android:layout_height="wrap_content">
                    </TextView>

                    <EditText
                        android:id="@+id/edtStelle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textColor="#0000CC"
                        android:layout_weight="2"
                        android:ems="10"
                        android:inputType="text" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginBottom="2dp"
                    android:background="@android:color/darker_gray"/>

                <Switch
                    android:id="@+id/switchTags"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#0000CC"
                    android:text="Tags" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="7"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="5"
                        android:textColor="#0000CC"
                        android:text="Lista Tags"
                        android:layout_height="wrap_content">

                    </TextView>

                    <Button
                        android:id="@+id/btnListaTags"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:text="..."
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginBottom="2dp"
                    android:background="@android:color/darker_gray"/>

                <Switch
                    android:id="@+id/switchDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#0000CC"
                    android:text="Date" />

                <Switch
                    android:id="@+id/switchDataSuperiore"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#0000CC"
                    android:text="Data Superiore" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="7"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:textColor="#0000CC"
                        android:text="Data"
                        android:layout_height="wrap_content">

                    </TextView>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="5"
                        android:weightSum="5"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/editDataSuperiore"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:ems="10"
                            android:enabled="false"
                            android:textColor="#0000CC"
                            android:inputType="text" />

                        <Button
                            android:id="@+id/btnDataSuperiore"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="..."
                            android:layout_weight="2">

                        </Button>
                    </LinearLayout>

                </LinearLayout>

                <Switch
                    android:id="@+id/switchDataInferiore"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#0000CC"
                    android:text="Data Inferiore" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="7"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:textColor="#0000CC"
                        android:text="Data"
                        android:layout_height="wrap_content">

                    </TextView>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="5"
                        android:weightSum="5"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/editDataInferiore"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:ems="10"
                            android:enabled="false"
                            android:textColor="#0000CC"
                            android:inputType="text" />

                        <Button
                            android:id="@+id/btnDataInferiore"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="..."
                            android:layout_weight="2">

                        </Button>
                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginBottom="2dp"
                    android:background="@android:color/darker_gray"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="2">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_gravity="center_vertical"
                            android:layout_width="0dp"
                            android:text="Playlist"
                            android:textSize="15sp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="#00CC00" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:weightSum="5"
                        android:orientation="horizontal"
                        android:layout_height="40dp">

                        <EditText
                            android:id="@+id/edtPreferito"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textColor="#0000CC"
                            android:layout_gravity="left|center_vertical"
                            android:layout_weight="4"
                            android:ems="10"
                            android:inputType="text" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:layout_height="match_parent">

                            <ImageView
                                android:id="@+id/imgSalvaPreferito"
                                android:layout_gravity="bottom"
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:background="@drawable/icona_salva" />

                            <ImageView
                                android:id="@+id/imgCaricaPreferito"
                                android:layout_gravity="bottom"
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:background="@drawable/icona_imposta" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginBottom="2dp"
                    android:background="@android:color/darker_gray"/>

                <!-- Mettere i campi prima di questo layout -->
                <LinearLayout
                    android:orientation="horizontal"
                    android:gravity="right"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/imgAnnullaRicerche"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/elimina_quadrato" />

                    <!-- <ImageView
                        android:id="@+id/imgSalvaRicerche"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/icona_salva" /> -->

                </LinearLayout>
            </LinearLayout>
        </ScrollView>

    </LinearLayout>

    <!-- <RelativeLayout
        android:id="@+id/laySceltaData"
        android:visibility="gone"
        android:background="@color/black"
        android:gravity="center_vertical|center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <DatePicker
            android:id="@+id/datePicker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true" />

    </RelativeLayout> -->

</androidx.constraintlayout.widget.ConstraintLayout>

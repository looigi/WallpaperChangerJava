<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/layListaTags"
        android:background="@drawable/bordo_arrotondato_bianco_non_sfumato_trasp"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:weightSum="10"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:weightSum="12"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="4"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txtTags"
                    android:layout_gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:textSize="20dp"
                    android:textColor="#0000CC"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/txtEliminaTags"
                    android:layout_gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:textSize="20dp"
                    android:textColor="#CC0000"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <Switch
                android:id="@+id/switchSoloSelezionatiTags"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_gravity="center_vertical"
                android:textColor="#0000CC"
                android:layout_height="wrap_content"
                android:text="Solo selezionati" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_gravity="center_vertical"
                android:gravity="right"
                android:layout_height="wrap_content">

                <!-- <ImageView
                    android:id="@+id/imgChiudeListaTags"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/error" /> -->

                <ImageView
                    android:id="@+id/imgChiudeESalvaListaTags"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/icona_salva" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="11"
            android:orientation="horizontal">

            <TextView
                android:layout_gravity="center_vertical"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:text="Selezionato"
                android:textSize="16dp"
                android:textColor="#00CC00"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_gravity="center_vertical"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:textColor="#CC0000"
                android:layout_height="wrap_content" />

            <TextView
                android:gravity="center_vertical|right"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:text="Eliminato"
                android:textSize="16dp"
                android:textColor="#CC0000"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <ListView
            android:id="@+id/lstTags"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="9"
            android:dividerHeight="1dp"
            android:listSelector="#0000CC" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>